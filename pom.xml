<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>sixsq.nuvla.server</groupId>
  <artifactId>server</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>server</name>
  <url>http://sixsq.com/</url>

  <parent>
    <groupId>sixsq.nuvla.parent</groupId>
    <artifactId>pom</artifactId>
    <version>1.0.0</version>
  </parent>

  <modules>
    <module>utils</module>
    <module>token</module>
    <module>cimi</module>
    <module>cimi-test-jar</module>
    <module>db-binding</module>
    <module>db-testing</module>
    <module>container</module>
  </modules>

  <scm>
    <connection>${scm.read}/server.git</connection>
    <developerConnection>${scm.write}/server.git</developerConnection>
    <url>${scm.public}/server.git</url>
    <tag>HEAD</tag>
  </scm>

  <properties>

    <logger.level>INFO</logger.level>
    <logger.filepattern>${project.build.directory}/instance/server/var/log/slipstream.%g
    </logger.filepattern>
    <server.jre.version>1.8.0</server.jre.version>
    
    <!-- root URL for the nexus repositories         -->
    <!-- The value should NOT have a trailing slash! -->
    <nexus>https://nexus.sixsq.com/content/repositories</nexus>

  </properties>

  <repositories>

    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>nuvla.releases</id>
      <name>Nuvla Releases</name>
      <url>https://nexus.sixsq.com/content/repositories/nuvla-releases</url>
    </repository>

    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>nuvla.snapshots</id>
      <name>Nuvla Snapshots</name>
      <url>https://nexus.sixsq.com/content/repositories/nuvla-snapshots</url>
    </repository>

  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>offline</id>
            <goals>
              <goal>go-offline</goal>
            </goals>
            <configuration>
              <excludeGroupIds>sixsq.nuvla.server</excludeGroupIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
