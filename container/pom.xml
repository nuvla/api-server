<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>container-dep</artifactId>
  <packaging>pom</packaging>
  <version>3.69-SNAPSHOT</version>
  <name>server/container</name>
  <url>http://sixsq.com</url>

  <parent>
    <groupId>sixsq.nuvla.server</groupId>
    <artifactId>server</artifactId>
    <version>3.69-SNAPSHOT</version>
  </parent>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>sixsq.nuvla.server</groupId>
      <artifactId>cimi-jar</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/dependency/lib</outputDirectory>
              <prependGroupIds>true</prependGroupIds>
              <stripVersion>false</stripVersion>
              <stripClassifier>true</stripClassifier>
              <excludeTypes>pom</excludeTypes>
              <includeScope>runtime</includeScope>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <version>0.24.0</version>
        <configuration>
          <images>
            <image>
              <alias>api</alias>
              <name>nuvla/api:${project.version}</name>
              <build>
                <from>nuvla/ring:${project.version}</from>
                <optimise>false</optimise>
                <assembly>
                  <targetDir>/</targetDir>
                  <inline>
                    <fileSets>
                      <fileSet>
                        <directory>target/dependency/lib</directory>
                        <outputDirectory>/opt/nuvla/server/lib.d/api</outputDirectory>
                        <includes>
                          <include>*.jar</include>
                        </includes>
                      </fileSet>
                    </fileSets>
                    <files>
                      <file>
                        <source>src/scripts/generate-auth-keys.sh</source>
                        <outputDirectory>/opt/nuvla/server/bin</outputDirectory>
                      </file>
                      <file>
                        <source>src/scripts/start-api.sh</source>
                        <outputDirectory>/opt/nuvla/server/bin</outputDirectory>
                      </file>
                    </files>
                  </inline>
                </assembly>
                <runCmds>
                  <runCmd>chmod 0755 /opt/nuvla/server/bin/generate-auth-keys.sh</runCmd>
                  <runCmd>chmod 0755 /opt/nuvla/server/bin/start-api.sh</runCmd>
                </runCmds>
                <env>
                  <NUVLA_SERVER_INIT>sixsq.nuvla.server.app.server/init</NUVLA_SERVER_INIT>
                  <NUVLA_SERVER_PORT>8201</NUVLA_SERVER_PORT>
                  <NUVLA_SERVER_HOST>0.0.0.0</NUVLA_SERVER_HOST>
                  <PERSISTENT_DB_BINDING>sixsq.nuvla.db.es.loader</PERSISTENT_DB_BINDING>
                  <EPHEMERAL_DB_BINDING>sixsq.nuvla.db.es.loader</EPHEMERAL_DB_BINDING>
                  <ES_HOST>localhost</ES_HOST>
                  <ES_PORT>9300</ES_PORT>
                </env>
                <ports>
                  <port>8201</port>
                </ports>
                <cmd>/opt/nuvla/server/bin/start-api.sh</cmd>
                <tags>latest</tags>
              </build>
            </image>
          </images>
        </configuration>

        <executions>
          <execution>
            <id>docker-build</id>
            <phase>package</phase>
            <goals>
              <goal>build</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
